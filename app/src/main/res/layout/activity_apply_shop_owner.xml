<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.study.mingappk.tab4.shop.ApplyShopOwnerActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divide">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/click_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/icon_head"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/user_detail_sharow"
                    tools:src="@mipmap/icon" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/icon_head">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/font_black_content"
                        android:textSize="18sp"
                        tools:text="备注名" />

                    <ImageView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        tools:ignore="ContentDescription"
                        tools:src="@mipmap/ic_sex_boy" />
                </LinearLayout>

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout1"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/icon_head"
                    android:layout_toRightOf="@id/icon_head"
                    android:textSize="14sp"
                    tools:text="昵称：哈哈哈" />
            </RelativeLayout>

            <include layout="@layout/divide_1_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="姓名"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/groupback"
                        android:ellipsize="end"
                        android:hint="真实姓名"
                        android:textColor="@color/font_black_9"
                        android:textSize="16sp" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="性别"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_sex"
                        android:layout_width="0dp"
                        android:background="@drawable/groupback"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="出生日期"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:background="@drawable/groupback"
                        android:textColor="@color/font_black_9"
                        android:textSize="16sp"
                        tools:text="一二三四五六七八九十" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="手机号"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textColor="@color/font_black_9"
                        android:textSize="16sp"
                        android:background="@drawable/groupback"
                        tools:text="一二三四五六七八九十" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="学历"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_education"
                        android:layout_width="0dp"
                        android:background="@drawable/groupback"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="所属村"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_village"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textColor="@color/font_black_9"
                        android:textSize="16sp"
                        android:background="@drawable/groupback"
                        tools:text="一二三四五六七八九十" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="4"
                        android:text="身份证照片（正反两面）"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_photo0"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="120dp"
                        android:src="@mipmap/add_photo_bg" />

                    <ImageView
                        android:id="@+id/img_photo1"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/add_photo_bg" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="4"
                        android:text="其它证明文件（非必须项）"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_photo2"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="120dp"
                        android:visibility="invisible"
                        tools:src="@mipmap/icon" />

                    <ImageView
                        android:id="@+id/img_photo3"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/add_photo_bg" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/divide_15_top" />

            <RelativeLayout
                android:id="@+id/fd_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divide"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_theme"
                    android:text="发消息"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>