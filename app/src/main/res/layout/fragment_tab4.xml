<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab4.SettingFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/divide">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"


            android:orientation="vertical">

            <include layout="@layout/divide_15_top_bottom" />

            <RelativeLayout
                android:id="@+id/click_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/icon_head"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/user_detail_sharow"
                    tools:src="@mipmap/icon" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/icon_head">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/font_black_content"
                        android:textSize="18sp"
                        tools:text="昵称" />

                    <ImageView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"
                        tools:ignore="ContentDescription"
                        tools:src="@mipmap/ic_sex_boy" />

                    <ImageView
                        android:id="@+id/store_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/ic_store_manager"
                        android:visibility="visible"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <TextView
                    android:id="@+id/account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout1"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/icon_head"
                    android:layout_toRightOf="@+id/icon_head"
                    android:textSize="14sp"
                    tools:text="账号：138xxxxxxxx" />
            </RelativeLayout>

            <include layout="@layout/divide_15_top_bottom" />

            <LinearLayout xmlns:listItem1="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/stand_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/click_identity_binding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp"
                    android:paddingTop="13dp">

                    <View
                        android:layout_width="@dimen/project_icon_width"
                        android:layout_height="@dimen/project_icon_width"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/tab4_identity_binding" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="实名认证"
                        android:textColor="#222222"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_is_binging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:text="未认证" />

                    <View
                        android:id="@+id/arrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@mipmap/user_home_arrow" />
                </LinearLayout>

                <include layout="@layout/divide_1_12" />

                <com.study.mingappk.tab4.myviews.ListItem1
                    android:id="@+id/click_my_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    listItem1:itemIcon="@mipmap/tab4_my_setting"
                    listItem1:itemTitle="我的" />

                <include layout="@layout/divide_1_12" />

                <com.study.mingappk.tab4.myviews.ListItem1
                    android:id="@+id/click_setting_common"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    listItem1:itemIcon="@mipmap/tab4_setting_common"
                    listItem1:itemTitle="通用" />

                <include layout="@layout/divide_1_12" />

                <com.study.mingappk.tab4.myviews.ListItem1
                    android:id="@+id/click_store_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    listItem1:itemIcon="@mipmap/tab4_store_manager"
                    listItem1:itemTitle="申请店长" />

                <include layout="@layout/divide_15_top" />

                <com.study.mingappk.tab4.myviews.ListItem1
                    android:id="@+id/click_loyout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    listItem1:itemIcon="@mipmap/tab4_logout"
                    listItem1:itemTitle="退出当前账号"
                    listItem1:showArrow="false" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>