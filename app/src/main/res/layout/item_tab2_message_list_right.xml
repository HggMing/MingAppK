<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_list_list_item_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Small Text"
        android:textColor="@color/font_black_9"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time"
        android:layout_marginRight="12dp"
        tools:src="@mipmap/icon" />

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res/net.coding.program"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/icon"
        android:background="@drawable/message_list_item_right_selector"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="17dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/voiceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voice_play"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginRight="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/content_pressed_selector"
                android:textColor="@color/font_black_content"
                android:textSize="16sp"
                tools:text="这是我自己说的话，啦啦" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/linearLayout"
        android:layout_marginRight="-42dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/linearLayout">

        <TextView
            android:id="@+id/resend"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="!" />

        <ProgressBar
            android:id="@+id/sending"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</RelativeLayout>
