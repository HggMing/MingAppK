<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab3_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_item_selector"
    android:foreground="?attr/selectableItemBackground"
    android:paddingRight="12dp">


    <ImageView
        android:id="@+id/imageView_village"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/user_home_bg" />

    <TextView
        android:id="@+id/tv_villageName"
        android:layout_width="180dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView_village"
        android:layout_toEndOf="@id/imageView_village"
        android:layout_toRightOf="@id/imageView_village"
        android:textColor="@color/font_black_content"
        android:textSize="18dp"
        tools:text="上方村" />

    <TextView
        android:id="@+id/tv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_village"
        android:layout_toEndOf="@id/imageView_village"
        android:layout_toRightOf="@id/imageView_village"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="New Text"
        android:textColor="@color/font_black_content"
        tools:text="我多想回到家乡,再回到她的身旁,看她的温柔善良,来抚慰我的心伤,就让我回到家乡,再回到她的身旁,让她的温柔善良,来抚慰我的心伤" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_villageName"
        android:textSize="12dp"
        tools:text="00:00" />

</RelativeLayout>
