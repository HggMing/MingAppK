<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.study.mingappk">

    <!-- 网络需要权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- GalleryFinal自定义相册 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".common.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_loading_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".userlogin.SplashActivity"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".test.TestActivity"
            android:label="@string/title_activity_test" />
        <activity
            android:name=".userlogin.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".tab4.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".tab4.AdviceActivity"
            android:label="@string/title_activity_advice"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".tab4.ChangePwdActivity"
            android:label="@string/title_activity_change_pwd" />
        <activity
            android:name=".tab4.selfinfo.UserDetailActivity"
            android:label="@string/title_activity_user_detail" />
        <activity
            android:name=".tab4.selfinfo.UpdateUnameActivity"
            android:label="@string/title_activity_update_uname" />
        <activity
            android:name=".tab4.selfinfo.UpdateIdcardActivity"
            android:label="@string/title_activity_update_idcard" />
        <activity
            android:name=".tab4.selfinfo.UpdateAdressActivity"
            android:label="@string/title_activity_update_adress" />
        <activity android:name=".test.Test2Activity" />
        <activity android:name=".test.Test3Activity"></activity>
    </application>

</manifest>